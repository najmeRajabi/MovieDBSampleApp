<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.moviedbsampleapp.ui.videoList.MovieListFragment"
        android:label="MovieListFragment" >
        <action
            android:id="@+id/action_movieListFragment_to_comingSoonVideosFragment"
            app:destination="@id/comingSoonVideosFragment" />
        <action
            android:id="@+id/action_movieListFragment_to_detailMovieFragment"
            app:destination="@id/detailMovieFragment" />
    </fragment>
    <fragment
        android:id="@+id/comingSoonVideosFragment"
        android:name="com.example.moviedbsampleapp.ui.upComing.ComingSoonVideosFragment"
        android:label="ComingSoonVideosFragment" />
    <fragment
        android:id="@+id/detailMovieFragment"
        android:name="com.example.moviedbsampleapp.ui.video.DetailMovieFragment"
        android:label="DetailMovieFragment" >
        <argument
            android:name="id"
            app:argType="long"
            android:defaultValue="0L" />
        <action
            android:id="@+id/action_detailMovieFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.example.moviedbsampleapp.ui.showVideo.WebViewFragment"
        android:label="WebViewFragment" >
        <argument
            android:name="link"
            app:argType="string" />
    </fragment>
</navigation>